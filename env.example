# Frontend (Vite) – public values bundled to the client
VITE_APP_URL=http://localhost:3000
VITE_ADMIN_BASE_PATH=/hekadmin
VITE_WORKSPACE_BASE_PATH=/workspace
VITE_SUPABASE_URL=https://<project>.supabase.co
VITE_SUPABASE_PUBLISHABLE_DEFAULT_KEY=<public-anon-or-publishable-key>
VITE_SUPABASE_SITE_URL=http://localhost:3000
VITE_SUPABASE_REDIRECT_URL=http://localhost:3000/**
VITE_ALLOWED_UPLOAD_MIME_TYPES=image/png,image/jpeg,application/json,application/geo+json,model/gltf+json,model/gltf-binary,application/vnd.google-earth.kml+xml,application/vnd.google-earth.kmz,application/octet-stream

# Supabase (Edge/Workers/Pages)
# Tercihen P-256 + JWKS doğrulaması kullanın; HS256 secret yalnızca legacy token doğrulaması için.
SUPABASE_URL=https://<project>.supabase.co
SUPABASE_SERVICE_ROLE_KEY=<service-role-key>
SUPABASE_JWT_SECRET=<only-if-you-still-verify-hs256>
SUPABASE_JWKS_URL=https://<project>.supabase.co/auth/v1/jwks
SUPABASE_ACCESS_TOKEN_EXPIRY=3600

# Cloudflare R2 – private/public buckets and signed URL generation
R2_ACCOUNT_ID=<account-id>
R2_ACCESS_KEY_ID=<access-key-id>
R2_SECRET_ACCESS_KEY=<secret-access-key>
R2_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
R2_PRIVATE_BUCKET=hekamap-private
R2_PUBLIC_BUCKET=hekamap-public
R2_SIGNED_URL_TTL_SECONDS=900
R2_SIGNED_URL_CONTENT_DISPOSITION=inline
R2_ALLOWED_UPLOAD_MIME_TYPES=image/png,image/jpeg,application/json,application/geo+json,model/gltf+json,model/gltf-binary,application/vnd.google-earth.kml+xml,application/vnd.google-earth.kmz,application/octet-stream

# Cookies / session (align with Supabase dashboard and HTTPS in prod)
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
COOKIE_DOMAIN=localhost

# Mailgun (e-posta gönderimi - free plan)
# auth@notify.hekamap.com -> Gönderici hesap (admin oluşturma, şifre yenileme)
# halit@hekamap.com -> Ürün sahibi iletişim adresi (anasayfa formu)
# destek@hekamap.com -> Community yapısı kurulduğunda kullanılacak (şimdilik kullanılmıyor)
# 
# Test için: Sandbox domain kullan (örn: sandbox846aa39e79b143b3823224202e263bfc.mailgun.org)
# Production için: hekamap.com domain'ini Mailgun'a ekle ve doğrula
MAILGUN_API_KEY=<mailgun-api-key>
MAILGUN_DOMAIN=hekamap.com
